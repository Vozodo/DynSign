{
  "manifest_version": 2,
  "name": "DynSign",
  "version": "1.0.0",
  "author": "vozodo",
  "homepage_url": "https://github.com/vozodo/dynsign",
  "description": "Dynamically loads signatures from a URL",
  "applications": {
    "gecko": {
      "id": "dynsign@vozodo.it",
      "strict_min_version": "128.0"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png"
  },
  "permissions": [
    "accountsRead",
    "accountsIdentities",
    "storage",
    "alarms",
    "http://*/",
    "https://*/"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "DynSign"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
